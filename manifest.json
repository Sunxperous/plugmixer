{
  "manifest_version": 2,

  "name": "Plugmixer",
  "short_name": "Plugmixer",
  "description": "Overcome the 200 item count limit in plug.dj playlists!",
  "author": "Sun Wang Jun",
  "version": "1.1.2",

  "permissions": [
    "http://plug.dj/",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://plug.dj/*"],
      "js": ["jquery-2.1.1.min.js","contentscript.js"]
    }
  ],
  "web_accessible_resources": [
    "apimessenger.js"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Plugmixer",
    "default_popup": "popup.html"
  }
}