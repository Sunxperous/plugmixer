{
  "manifest_version": 2,

  "name": "Plugmixer",
  "short_name": "Plugmixer",
  "description": "Playlist management for plug.dj!",
  "author": "Sun Wang Jun",
  "version": "2.0.0",

  "permissions": [
    "https://plug.dj/",
    "storage"
  ],
  "background": {
    "scripts": ["chrome/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://plug.dj/*"],
      "js": ["chrome/contentscript.js"]
    }
  ],
  "web_accessible_resources": [
  ],
  "content_security_policy": "script-src 'self' https://localhost:8080 https://*.googledrive.com/; object-src 'self'",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Plugmixer",
    "default_popup": "chrome/popup.html"
  }
}
