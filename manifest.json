{
  "manifest_version": 2,

  "name": "Plugmixer",
  "description": "Overcome the 200 item count limit in plug.dj playlists!",
  "version": "0.2",

  "permissions": [
    "http://plug.dj/",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://plug.dj/*"],
      "js": ["contentscript.js"]
    }
  ],
  "web_accessible_resources": [
    "mix.js"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "page_action": {
    "default_icon": {
      "19": "icon19bw.png",
      "38": "icon38bw.png"
    },
    "default_title": "Plugmixer"
  }
}